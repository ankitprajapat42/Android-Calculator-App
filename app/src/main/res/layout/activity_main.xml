<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    tools:context=".MainActivity"
    android:background="@color/white">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_margin="20dp"
        android:background="@drawable/box_bg">

        <EditText
            android:id="@+id/display_screen"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom|end"
            android:hint="0"
            android:padding="12dp"
            android:inputType="none"
            android:textSize="70sp"
            android:focusable="false"
            android:textColor="@color/black"
            android:background="@drawable/input_bg"/>


        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="40dp"
            android:textStyle="bold"
            android:padding="12dp"
            android:textColor="#999"
            android:textAlignment="textEnd"
            android:visibility="gone"/>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="15dp">

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_for_AC"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                android:text="AC"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_for_delete"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                android:text="âŒ«"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_for_AddSub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                android:text="+/-"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <Button
                android:id="@+id/btn_for_div"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                android:text="/"
                android:textColor="@color/white"
                android:textSize="32sp" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/row2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_for_7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#E7E7E7"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_for_8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#E7E7E7"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_for_9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#E7E7E7"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_for_mult"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="32sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_for_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#E7E7E7"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_for_5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#E7E7E7"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_for_6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#E7E7E7"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_for_sub"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_for_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#E7E7E7"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_for_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#E7E7E7"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_for_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#E7E7E7"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_for_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/blue"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="40sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/row5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:weightSum="4">

            <Button
                android:id="@+id/btn_for_percentage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#E7E7E7"
                android:text="%"
                android:textColor="@color/black"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_for_0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#E7E7E7"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_for_point"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="#E7E7E7"
                android:text="."
                android:textColor="@color/black"
                android:textSize="32sp" />

            <Button
                android:id="@+id/btn_for_equleto"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:backgroundTint="@color/button_orange"
                android:text="="
                android:textSize="32sp" />


        </LinearLayout>

    </LinearLayout>


</LinearLayout>